      //- .form-group
      //-   label(for="time_of_day") Time Of Day
      //-   select(class="form-control", name="time_of_day" )  
      //-     option(value="") 
      //-     each time_of_day, key in times_of_day
      //-       option(value="#{key}") #{time_of_day}
      .form-group
        div.check_boxes
          input(type="checkbox" id="driver" name="driver")
          label.font-weight-normal(for="driver") Driver
          br
          input(type="checkbox" id="subscriber" name="subscriber")
          label.font-weight-normal(for="subscriber") Subscriber
          br
          input(type="checkbox" id="family_opportunity" name="family_opportunity")
          label.font-weight-normal(for="family_opportunity") Family Opportunity
      // SUBMIT      
      button.btn.btn-default.submit(type="submit" class="btn btn-default") Search  
      
          
        
