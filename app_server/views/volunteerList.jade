    .col-md-2
      h3 Quick Search
      button
        a Subscribers
      button
        a Drivers
      button
        a Family Participation
            
      h3 Custom Search
      form(class="" role="form" data-toggle="validator" action='' method='post')

      // AFFILATION
      .form-group
        label(for="opportunity") Opportunity
        select(class="form-control", name="opportunity" )  
          option(value="") 
          each opportunity, key in opportunity_categories
            option(value="#{key}") #{opportunity}
      .form-group
        label(for="language") Language
        select(class="form-control", name="language" )  
          option(value="") 
          each language, key in languages
            option(value="#{key}") #{language}   
      .form-group
        label(for="hear_about") Hear About
        select(class="form-control", name="hear_about" )  
          option(value="") 
          each hear_about, key in hear_abouts
            option(value="#{key}") #{hear_about}
      .form-group
        label(for="affiliation") Affiliation
        select(class="form-control", name="affiliation" )  
          option(value="") Choose One
          each affiliation, key in affiliations
            option(value="#{key}") #{affiliation}
      //- .form-group
